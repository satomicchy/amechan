<h3><%= @title %>&nbsp;&nbsp;<%= link_to '新規登録', new_need_path, class: "btn btn-sm btn-info" %></h3>

<table class="table table-condensed">
  <thead>
    <tr>
      <th width="35">No.</th>
      <th width="60">記入日</th>
      <th width="70">スタッフ</th>
      <th>タイトル</th>
      <th width="60">重要度</th>
      <th width="70">状態</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
    <tr>
      <td><%= need.id %></td>
      <td><%= need.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= need.staff.try("name") %></td>
      <td><%= need.title %></td>
      <td><% if need.importance.present? %><%= t(need.importance) %><% end %></td>
      <td><% if need.status.present? %><%= t(need.status) %><% end %></td>
      <td><%= link_to '詳細', need, class: "btn btn-sm btn-default" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
