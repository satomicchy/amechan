<h3>ログインフォーム</h3>

<br />

<div class="col-xs-12 col-sm-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <label for="exampleInputEmail1">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, class: "form-control login_form", id: "exampleInputEmail1" %>
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">パスワード</label>
      <%= f.password_field :password, autocomplete: "off", class: "form-control login_form", id: "exampleInputPassword1" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-default" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
